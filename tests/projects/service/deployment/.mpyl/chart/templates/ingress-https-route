spec:
  routes:
  - kind: Rule
    match: Host(`nodeservice-152.test.nl`)
    services:
    - name: nodeservice
      kind: Service
      port: 8081
    middlewares:
    - name: nodeservice-ingress-0-whitelist
    - name: traefik-https-redirect@kubernetescrd
  - kind: Rule
    match: Host(`some.other.host.com`)
    services:
    - name: nodeservice
      kind: Service
      port: 8081
    middlewares:
    - name: nodeservice-ingress-1-whitelist
    - name: traefik-https-redirect@kubernetescrd
  entryPoints:
