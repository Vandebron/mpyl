  labels:
    name: nodeservice
    app.kubernetes.io/version: pr-152
    app.kubernetes.io/managed-by: Helm
    app.kubernetes.io/name: nodeservice
    app.kubernetes.io/instance: nodeservice
    maintainers: MPyL
    maintainer: MPyL
    version: pr-152
    revision: e06a0a806855900ba98f029bc2b1b5cd2308c7a6
